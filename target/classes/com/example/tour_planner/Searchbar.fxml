<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<HBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.tour_planner.view.SearchBarController">
    <userData>
        <fx:reference source="controller"/>
    </userData>
    <TextField fx:id="searchTextField" style="-fx-background-color: #3f054f; -fx-border-color: #66e0ff;"
               HBox.hgrow="ALWAYS"/>
    <Button fx:id="searchButton"
            style="-fx-background-color: #22023b; -fx-border-color: #66e0ff; -fx-text-fill: white;"
            text="%SearchBar_Search" onAction="#onSearchButton"/>
</HBox>
