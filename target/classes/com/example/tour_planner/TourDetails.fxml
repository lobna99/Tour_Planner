<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.geometry.Insets?>
<VBox style="-fx-background-color: #22023b;" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.tour_planner.view.TourDetailsController">
    <padding>
        <Insets bottom="10" left="10" right="10" top="10" />
    </padding>
    <SplitPane orientation="VERTICAL" prefHeight="466.0" prefWidth="729.0" style="-fx-background-color: #22023b;"
               VBox.vgrow="ALWAYS">
        <TabPane style="-fx-background-color: #22023b; -fx-border-color: #66e0ff;" tabClosingPolicy="UNAVAILABLE">
            <Tab style="-fx-background: #22023b; -fx-border-color: #66e0ff; -fx-text-fill: white;" text="%MediaDetails_Tab_Content">
                <AnchorPane id="Content" minHeight="0.0" minWidth="0.0" prefHeight="436.0" prefWidth="448.0"
                            style="-fx-background-color: #3f054f; -fx-border-color: #66e0ff; -fx-padding: 50px;">
                    <Label layoutX="190.0" layoutY="25.0" style="-fx-text-fill: white;" text="%Details_From" />
                    <TextField fx:id="fromDetail" layoutX="297.0" layoutY="21.0" prefHeight="18.0" prefWidth="87.0"
                               style="-fx-background-color: #22023b; -fx-border-color: #66e0ff;" />
                    <Label layoutX="17.0" layoutY="25.0" style="-fx-text-fill: white;" text="%Details_Name" />
                    <TextField fx:id="nameDetail" layoutX="88.0" layoutY="21.0" prefHeight="18.0" prefWidth="72.0"
                               style="-fx-border-color: #66e0ff; -fx-background-color: #22023b;" styleClass="input" />
                    <Label layoutX="190.0" layoutY="105.0" style="-fx-text-fill: white;" text="%Details_Description" />
                    <Label layoutX="17.0" layoutY="64.0" style="-fx-text-fill: white;" text="%Details_To" />
                    <TextField fx:id="toDetail" layoutX="88.0" layoutY="60.0" prefHeight="27.0" prefWidth="72.0"
                               style="-fx-background-color: #22023b; -fx-border-color: #66e0ff;" styleClass="input" />
                    <Label layoutX="190.0" layoutY="64.0" style="-fx-text-fill: white;" text="%Details_Transport_Type" />
                    <TextField fx:id="typeDetail" layoutX="297.0" layoutY="60.0" prefHeight="27.0" prefWidth="87.0"
                               style="-fx-background-color: #22023b; -fx-border-color: #66e0ff;" />
                    <Label layoutX="19.0" layoutY="105.0" style="-fx-text-fill: white;" text="%Details_Distance" />
                    <TextField fx:id="distanceDetail" layoutX="87.0" layoutY="100.0" prefHeight="27.0" prefWidth="73.0"
                               style="-fx-background-color: #22023b; -fx-border-color: #66e0ff;" />
                    <Label layoutX="20.0" layoutY="149.0" style="-fx-text-fill: white;" text="%Details_Time" />
                    <TextField fx:id="timeDetail" layoutX="87.0" layoutY="145.0" prefHeight="27.0" prefWidth="73.0"
                               style="-fx-background-color: #22023b; -fx-border-color: #66e0ff;" />
                    <TextField fx:id="infoDetail" layoutX="297.0" layoutY="105.0" prefHeight="95.0" prefWidth="140.0"
                               style="-fx-background-color: #22023b; -fx-border-color: #66e0ff;" />
                    <TableView fx:id="LogTable" layoutX="20.0" layoutY="271.0" prefHeight="150.0" prefWidth="451.0"
                               style="-fx-background-color: #22023b; -fx-text-fill: white; -fx-border-color: #66e0ff;">
                        <columns>
                            <TableColumn fx:id="nr" prefWidth="75.0" text="%Nr"/>
                            <TableColumn fx:id="time" prefWidth="75.0" text="%time"/>
                            <TableColumn fx:id="comment" prefWidth="75.0" text="%comment"/>
                            <TableColumn fx:id="difficulty" prefWidth="75.0" text="%difficulty"/>
                            <TableColumn fx:id="total_time" prefWidth="74.199951171875" text="%total_time"/>
                            <TableColumn fx:id="rating" prefWidth="76.20001220703125" text="%rating"/>
                        </columns>
                    </TableView>
                    <Button layoutX="17.0" layoutY="187.0" onAction="#onButtonUpdateTour" prefHeight="26.0"
                            prefWidth="100.0" text="%UpdateTour" textAlignment="CENTER"
                            style="-fx-text-fill: white; -fx-background-color: #22023b; -fx-border-color: #fa1bf2;"/>
                    <Label layoutX="19.0" layoutY="231.0" prefHeight="27.0" prefWidth="60.0" text="%Logs" textFill="WHITE">
                        <font>
                            <Font size="18.0"/>
                        </font>
                    </Label>
                    <Button layoutX="101.0" layoutY="231.0" prefHeight="26.0" prefWidth="28.0"
                            style="-fx-background-color: #22023b; -fx-text-fill: white; -fx-border-color: #fa1bf2;"
                            text="+" textAlignment="CENTER" onAction="#onButtonAddLog"/>
                    <Button layoutX="146.0" layoutY="231.0" prefHeight="26.0" prefWidth="28.0"
                            style="-fx-background-color: #22023b; -fx-text-fill: white; -fx-border-color: #fa1bf2;"
                            text="-" textAlignment="CENTER" onAction="#onButtonRemoveLog"/>
                    <Button layoutX="347.0" layoutY="231.0" mnemonicParsing="false" prefHeight="26.0" prefWidth="124.0"
                            style="-fx-background-color: #22023b; -fx-text-fill: white; -fx-border-color: #fa1bf2;"
                            text="%Update_Log" onAction="#onButtonUpdateLog"/>
                    <Label layoutX="473.0" layoutY="25.0" style="-fx-text-fill: white;" text="%Popularity" />
                    <Label fx:id="popularity" layoutX="553.0" layoutY="24.0" prefHeight="18.0" prefWidth="66.0"
                           style="-fx-text-fill: white;" />
                    <Label layoutX="473.0" layoutY="73.0" style="-fx-text-fill: white;" text="%child-friendliness" />
                    <Label fx:id="child_friendliness" layoutX="586.0" layoutY="72.0" prefHeight="18.0" prefWidth="57.0"/>
                </AnchorPane>
            </Tab>
            <Tab style="-fx-background: #22023b; -fx-border-color: #66e0ff;" text="%MediaDetails_Tab_Image">
                <ScrollPane style="-fx-background-color: #3f054f; -fx-border-color: #66e0ff;">
                    <ImageView fx:id="ivMap">
                    </ImageView>
                </ScrollPane>
            </Tab>
        </TabPane>
    </SplitPane>
</VBox>
